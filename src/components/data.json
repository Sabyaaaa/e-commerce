
{
  "button": "Send Message",
  "thankyouMessage":"Your message has been sent successfully!!",
  "fields": [
    {
      "name": "yourName",
      "placeholder": "Your Name",
      "label": "Your Name",
      "required": true,
      "validation": {
        "maxLength": 150,
        "pattern": "^[A-Za-z]+$",
        "message":"Invalid Format",
        "required": true
        
      },
     
      "htmlElement": "textbox"
    },
    {
      "name": "email",
      "placeholder": "Email",
      "label": "Email",
      "required": true,
      "validation": {
        "pattern": "^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}$"
        
      },
     
      "htmlElement": "email"
    },
    {
      "name": "subject",
      "placeholder": "Subject",
      "label": "Subject",
      "required": true,
      "validation": {
        "maxLength": 150,
        "pattern": "^[A-Za-z]+$"

      },
      "htmlElement": "textbox"
    },
    {
      "name": "message",
      "placeholder": "Write your message",
      "label": "Message",
      "required": true,
      "validation": {
        "minLength": 25,
        "maxLength": 250
        
      },
      
      "htmlElement": "textarea"
    }
  ]
}